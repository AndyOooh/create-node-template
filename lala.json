
{
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "Node16", 
      "moduleResolution": "Node16", 
      "target": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".", 
      "rootDir": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@utils/*": ["src/utils/*"],
        "@runners/*": ["src/runners/*"]
      }
    },
    "include": ["src", "eslint.config.js"]
  }
  